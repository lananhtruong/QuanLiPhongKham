@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Xin chào, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", style = "color:white" })
        </li>
        &nbsp;
        &nbsp;
        @if (User.IsInRole("Admin"))
        {
            <li>@Html.ActionLink("Đăng ký thành viên", "RegisterEmployee", "Account", routeValues: null, htmlAttributes: new { id = "registerLink2", style = "color:white" }) &nbsp; &nbsp;</li>
            <li>@Html.ActionLink("Quản lý quyền", "Index", "AspNetRoles", routeValues: null, htmlAttributes: new { id = "registerLink3", style = "color:white" })</li>
        }
        @if (User.IsInRole("Employee"))
        {
            <li>@Html.ActionLink("Đăng kí lịch khám", "Create", "NhanBenh", routeValues: null, htmlAttributes: new { id = "registerLink1", style = "color:white" }) &nbsp; &nbsp;</li>
            <li>@Html.ActionLink("Tiếp nhận bệnh nhân", "Index", "Customers", routeValues: null, htmlAttributes: new { id = "registerLink1", style = "color:white" })</li>
        }
        @if (User.IsInRole("Doctor"))
        {
            <li>@Html.ActionLink("Khám bệnh", "Index", "PhongKham", routeValues: null, htmlAttributes: new { id = "registerLink1", style = "color:white" })</li>
        }
        @if (User.IsInRole("Mediator"))
        {
            <li>@Html.ActionLink("Quản lý kho thuốc", "Index", "Medicines", routeValues: null, htmlAttributes: new { id = "registerLink1", style = "color:white" })&nbsp; &nbsp;</li>
            <li>@Html.ActionLink("Phát thuốc", "Index", "QuayThuoc", routeValues: null, htmlAttributes: new { id = "registerLink1", style = "color:white" })</li>
        }
        @if (User.IsInRole("Customer"))
        {
            <li>@Html.ActionLink("Đăng ký khám bệnh", "Create", "Prescription", routeValues: null, htmlAttributes: new { id = "registerLink1", style = "color:white" }) &nbsp; &nbsp;</li>
            <li>@Html.ActionLink("Lịch sử khám bệnh", "Index", "LSKham", routeValues: null, htmlAttributes: new { id = "registerLink1", style = "color:white" })</li>
        }
        @if (User.IsInRole("Manager"))
        {
            <li>@Html.ActionLink("Quản lý đơn thuốc", "Index", "Prescription", routeValues: null, htmlAttributes: new { id = "registerLink1", style = "color:white" })</li>
        }
        &nbsp;
        &nbsp;
        <li><a href="javascript:document.getElementById('logoutForm').submit()" style="color:white">Đăng xuất</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Đăng ký", "RegisterCustomer", "Account", routeValues: null, htmlAttributes: new { id = "registerLink1", style = "color:white" })</li>
        &nbsp;
        &nbsp;
        <li>@Html.ActionLink("Đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", style = "color:white" })</li>
    </ul>
}
